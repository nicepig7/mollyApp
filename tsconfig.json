{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "lib": ["ES2020","DOM","DOM.Iterable"],
        "baseUrl": ".",
        "module": "es2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "types": ["node", "vite/client"],
        "paths": {
            "@/*" : ["src/*"],
            "@common/*" : ["src/common/*"],
            "@compo/*"  : ["src/compo/*"],
            "@screen/*" : ["src/screen/*"],
            "@page/*"   : ["src/page/*"],
        }
    },
    "include": [
        "vite.config.ts",
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    }
}