{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "lib": ["ES2020","DOM","DOM.Iterable"],
        "baseUrl": ".",
        "module": "es2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "paths": {
            "@/*" : ["src/*"]
        }
    },
    "include": [
        "vite.config.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    }
}